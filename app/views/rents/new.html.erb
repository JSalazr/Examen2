<h1>New Rent</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @rent.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @rent.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@car, @rent] do |f| %>
<div>
  <p>
    <%= f.label :client, "Cliente"%>
    <%= f.text_field :client%>
  </p>

  <p>
    <%= f.label :days%>
    <%= f.number_field :days%>
  </p>

  <p>
    <%= f.submit "Crear", class:"btn btn-default btn-lg" %>
    <%= link_to "Cancelar", car_path(@car.id), class:"btn btn-default btn-lg" %>
  </p>
</div>
<% end %>
