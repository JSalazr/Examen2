<h1>New Car</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @car.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @car.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @car do |f| %>
<div>
  <p>
    <%= f.label :modelo, "Modelo"%>
    <%= f.text_field :modelo%>
  </p>

  <p>
    <%= f.label :description%>
    <%= f.text_field :description%>
  </p>

  <p>
    <%= f.label :price_per_day%>
    <%= f.number_field :price_per_day%>
  </p>

  <p>
    <%= f.label :category%>
    <%= f.select :category, Car.categories %>
  </p>

  <p>
    <%= f.submit "Crear", class:"btn btn-default btn-lg" %>
    <%= link_to "Cancelar", car_owner_path(current_owner.id), class:"btn btn-default btn-lg" %>
  </p>
</div>
<% end %>
