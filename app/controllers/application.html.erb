<!DOCTYPE html>
<html>
<head>
  <title>Rent-A-Car</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">


  <!-- Navigation -->

<nav class="navbar navbar-light" style="background-color: #654321; font-size: 25px" role="navigation">
    <% if current_owner %>
  <a class="navbar-brand">Rent-A-Car - <%= current_owner.name %> </a>
  <%else%>
    <a class="navbar-brand">Rent-A-Car </a>
  <% end%>
  <ul class="nav navbar-nav navbar-right">
    <li class="nav-item">
      <%= link_to "Home", root_path %>
    </li>

    <li class="nav-item">
      <%= link_to "Carros", cars_path %>
    </li>

    <% if current_owner %>

    <li class="nav-item">
      <%= link_to "Mis Carros", car_owner_path(current_owner.id) %>
    </li>

    <li class="nav-item" style="padding-right: 130px">
      <%= link_to "Log Out", logout_path, data: {method: :delete} %>
    </li>

    <% else%>

    <li class="nav-item">
      <%= link_to "Sign In", login_path %>
    </li>

    <li class="nav-item" style="padding-right: 130px">
      <%= link_to "Sign Up", new_owner_path %>
    </li>

    <%end%>

  </ul>

</nav>

  <div align= "center">
    <body background = "https://files.graphiq.com/2307/media/images/Light_Gray_429810_i0.png">
    <%= yield %>
  </div>


</body>
</html>
